<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="slide_slide_view_form" model="ir.ui.view">
        <field name="name">slide.slide.view.form.inherit</field>
        <field name="model">slide.slide</field>
        <field name="inherit_id" ref="website_slides.view_slide_slide_form" />
        <field name="arch" type="xml">
            <xpath expr="//notebook" position="inside">
                <page
                    name="url"
                    string="URL"
                    invisible="slide_category != 'video'"
                >
                    <field
                        name="elearning_url_ids"
                        widget="one2many_list"
                        context="{'default_slide_id': id}"
                    >
                        <list editable="bottom">
                            <field name="url" />
                            <field name="lang" />
                        </list>
                    </field>
                    <group groups="base.group_no_one">
                        <field name="url" readonly="True" />
                    </group>
                </page>
                <page
                    name="content"
                    string="Website Content"
                    invisible="slide_category != 'article'"
                    groups="base.group_no_one"
                >
                    <field name="html_content" />
                </page>
            </xpath>
            <xpath expr="//field[@name='video_url']" position="attributes">
                <attribute name="required">False</attribute>
                <attribute name="readonly">True</attribute>
            </xpath>
        </field>
    </record>
</odoo>
